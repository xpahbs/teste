<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <h3>Tipo de Usuários Cadastrados</h3>
        <hr>
        <table class="table table-striped table-condensed table-bordered">
          <thead>
          <tr>
            <th>Tipo Usuário</th>
            <th>Status</th>
            <th class="text-center">Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @tipo_usuarios.each do |tipo_usuario| %>
              <tr>
                <td><%= tipo_usuario.tpu_nome %></td>
                <td><%= tipo_usuario.tpu_status %></td>
                <td class="text-center">
                  <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, tipo_usuario, class: 'btn btn-warning btn-sm' %>
                  <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_tipo_usuario_path(tipo_usuario), class: 'btn btn-info btn-sm' %>
                  <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, tipo_usuario, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to '<i class="glyphicon glyphicon-plus-sign"></i> Novo Usuário'.html_safe, new_tipo_usuario_path, class: 'btn btn-primary' %>
      </div>
    </div>

  </div>
</div>


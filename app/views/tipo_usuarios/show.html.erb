<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">
          <i class="glyphicon glyphicon-user"></i> Tipo Usuário
        </div>
      </div>
      <div class="panel-body">
        <% if notice %>
            <div class="alert alert-info">
              <p id="notice"><i class="glyphicon glyphicon-info-sign"></i> <%= notice %></p>
            </div>
        <% end %>
        <p>
          <strong>Descrição:</strong>
          <%= @tipo_usuario.tpu_nome %>
        </p>

        <p>
          <strong>Status:</strong>
          <% if @tipo_usuario.tpu_status == 1 %>
              ATIVO
          <% else %>
              INATIVO
          <% end %>
        </p>

        <p>
          <strong>Data Criação</strong>
          <%= @tipo_usuario.created_at %>
        </p>

        <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_tipo_usuario_path(@tipo_usuario), class: 'btn btn-sm btn-info' %>
        <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, tipo_usuarios_path, class: 'btn btn-sm btn-warning' %>

      </div>
    </div>
  </div>
</div>

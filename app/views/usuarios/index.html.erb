<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <h3>Usuários</h3>
        <hr>
        <table class="table table-striped table-condensed table-bordered">
          <thead>
          <tr>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Sexo</th>
            <th>Matricula</th>
            <th>Senha</th>
            <th>Tipo Usuário</th>
            <th class="text-center">Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.usr_nome %></td>
                <td><%= usuario.usr_cpf %></td>
                <td><%= usuario.usr_sexo %></td>
                <td><%= usuario.usr_matricula %></td>
                <td><%= usuario.usr_senha %></td>
                <td><%= usuario.tipo_usuario_id %></td>
                <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, usuario, class: 'btn btn-sm btn-warning' %>
                  <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_usuario_path(usuario), class: 'btn btn-sm btn-info' %>
                  <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, usuario, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to '<i class="glyphicon glyphicon-plus-sign"> Cadastrar</i>'.html_safe, new_usuario_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</div>
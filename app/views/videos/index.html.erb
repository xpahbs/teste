<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <h3>Listing Videos</h3>
        <hr>
        <table class="table table-striped table-bordered table-condensed">
          <thead>
          <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Link</th>
            <th>Disciplina</th>
            <th class="text-center">Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @videos.each do |video| %>
              <tr>
                <td><%= video.vid_titulo %></td>
                <td><%= video.vid_descricao %></td>
                <td><%= video.vid_link %></td>
                <td><%= video.disciplina %></td>
                <td>
                  <%= link_to 'Show', video, class: 'btn btn-sm btn-warning' %>
                  <%= link_to 'Edit', edit_video_path(video), class: 'btn btn-sm btn-info' %>
                  <%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to '<i class="glyphicon glyphicon-plus-sign"></i> Cadastrar'.html_safe, new_video_path, class: 'btn btn-sm btn-primary' %>

      </div>
    </div>
  </div>
</div>

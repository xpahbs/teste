<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if notice %>
            <div class="alert alert-info" role="alert"><p id="notice"> <i class="glyphicon glyphicon-info-sign"></i> <%= notice %></p></div>
        <% end %>
        <h3>Cursos</h3>
        <hr>
        <table class="table table-striped table-condensed table-bordered">
          <thead>
          <tr>
            <th>Status</th>
            <th>Curso</th>
            <th>Tempo duração</th>
            <th>Data início</th>
            <th>Data término</th>
            <th>Valor</th>
            <th class="text-center">Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @cursos.each do |curso| %>
              <tr>
                <td><%= curso.cur_status %></td>
                <td><%= curso.cur_nome %></td>
                <td><%= curso.cur_tempo_duracao %></td>
                <td><%= curso.cur_data_inicio %></td>
                <td><%= curso.cur_data_termino %></td>
                <td><%= curso.cur_valor %></td>
                <td class="text-center">
                  <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, curso, class: 'btn btn-sm btn-warning', 'data-placement' => 'top', 'title' => 'Visualizar Registro', 'data-toggle' => 'tooltip' %>
                  <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_curso_path(curso), class: 'btn btn-sm btn-info', 'data-placement' => 'top', 'title' => 'Editar Registro', 'data-toggle' => 'tooltip' %>
                  <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, curso, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, 'data-placement' => 'top', 'title' => 'Excluir Registro', 'data-toggle' => 'tooltip' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to '<i class="glyphicon glyphicon-plus-sign"></i> Cadastrar'.html_safe, new_curso_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</div>


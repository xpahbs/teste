<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <h3>Escolas</h3>
        <hr>
        <table class="table table-striped table-condensed table-bordered">
          <thead>
          <tr>
            <th>Esc nome</th>
            <th>Esc status</th>
            <th>Esc qre</th>
            <th class="text-center">Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @escolas.each do |escola| %>
              <tr>
                <td><%= escola.esc_nome %></td>
                <td><%= escola.esc_status %></td>
                <td><%= escola.esc_qre %></td>
                <td><%= link_to 'Show', escola %></td>
                <td><%= link_to 'Edit', edit_escola_path(escola) %></td>
                <td><%= link_to 'Destroy', escola, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to '<i class="glyphicon glyphicon-plus-sign"></i> Cadastrar'.html_safe, new_escola_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</div>

